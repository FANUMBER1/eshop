<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min1.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">    
    <script src="/assets/js/bootstrap.min1.js" type="text/javascript"></script>
    <link href="/assets/css/css.css" rel="stylesheets">
    <title>Document</title>
    <style>
      body, html {
          height: 100%;
          margin: 0;
      }
      .container-fluid {
          height: 100%;
      }
      .row {
          height: 100%;
      }
      .position-fixed {
          height: 100vh;
      }
      .main-content {
          margin-left: 250px; /* Điều chỉnh theo chiều rộng của sidebar */
          padding: 20px;
      }
  </style>
</head>
<body>
  <%- include('./common/siderbaadmin.ejs') %>

  <div class="main-content ml-2 col-10" >
    <div class="row text-center">
      <h1> INFORMATION USER ROLE </h1> 
    </div>
    <div class="row justify-content-center">
        <div class="col-10 border border-dark rounded p-3 ">
           <div class="row">
            <table class="table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>ID</th>
                  <th>Size</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < data.length ; i++){%>   
                <tr>
                  <td><%= i %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].size %></td>
                <td class="d-flex"><a class="nav-link text-dark" href="/admin/size/edit/<%= data[i].id %>"> Chi tiết /<a class="nav-link text-dark" href="/admin/size/delete/<%= data[i].id %>"> Xóa</a></a></td>
                </tr>
                <%}%>
              </tbody>
            </table>            
          </div> 
       </div> 
    </div>
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-5">
      <h2>Create User Role</h2>
    <form action="/admin/size/create" method="post" >
      <div class="form-group">
        <label for="email">Size</label>
        <input type="text" class="form-control" id="email" name="size">
      </div>
      <button type="submit" class="mt-2 btn btn-default btn-dark">CREATE</button>
    </form>
      </div>
    </div>
    </div>
  </body>
</html>