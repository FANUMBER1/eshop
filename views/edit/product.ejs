<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min1.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">    
    <script src="/assets/js/bootstrap.min1.js" type="text/javascript"></script>
    <link href="/assets/css/css.css" rel="stylesheets">
	<link rel="stylesheet" href="/assets/css/bootstrap.css">
	<link rel="stylesheet" href="/assets/css/style.css">

    <title>Document</title>
    <style>
      body, html {
          height: 100%;
          margin: 0;
      }
      .container-fluid {
          height: 100%;
      }
      .row {
          height: 100%;
      }
      .position-fixed {
          height: 100vh;
      }
      .main-content {
          margin-left: 250px; /* Điều chỉnh theo chiều rộng của sidebar */
          padding: 20px;
      }
  </style>
  		<%- include('../common/css.ejs') %>
</head>
<body class="js">
    <%- include('../common/siderbaadmin.ejs') %>
    <div class="main-content col-10" style="margin-left: 250px;">
		<section class="shop checkout section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 col-12">
						<div class="checkout-form">
							<h2>Name: <%=data.name%>| Sale: <%= data.countsale %>| View: <%= data.countview %></h2>
							<!-- Form --> 
							<form class="form" method="post" action="/admin/product/edit/<%=data.id %>">
								<div class="row">
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Name<span>*</span></label>
											<input type="text" name="name" placeholder="" value="<%= data.name %>" required="required">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Price<span>*</span></label>
											<input type="text" name="price" placeholder="" value="<%= data.price %>" required="required">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Quantity<span>*</span></label>
											<input type="text" name="quantity" placeholder="" value="<%= data.quantity %>" required="required">
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Classfy<span>*</span></label>
											<select name="classfy" id="country">
												<% for(var i=0; i< classfy.length; i++){%>
													<% if(data.classfy.id == classfy[i].id){%>
														<option value="<%= classfy[i].id %>" selected><%= classfy[i].name %></option>
														<%}else%>
													  <option value="<%= classfy[i].id %>"><%= classfy[i].name %></option>
												<%}%>
											</select>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Userclass<span>*</span></label>
											<select name="userclass" id="country">
												<% for(var i=0; i< userclass.length; i++){%>
													<% if(data.userclass.id == userclass[i].id){%>
														<option value="<%= userclass[i].id %>" selected><%= userclass[i].name %></option>
														<%}else%>													
														<option value="<%= userclass[i].id %>"><%= userclass[i].name %></option>
												<%}%>
											</select>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<div class="form-group">
											<label>Discount<span>*</span></label>
											<select name="discount" id="state-province">
												<% for(var i=0; i< discount.length; i++){%>
													<% if(data.discount.id == discount[i].id){%>
														<option value="<%= discount[i].id %>" selected><%= discount[i].name %></option>
														<%}else%>
														<option value="<%= discount[i].id %>"><%= discount[i].name %></option>
												<%}%>
											</select>
										</div>
									</div>
									<div class="col-lg-6 col-md-12 col-12">
										<div class="form-group message">
											<label>Describe<span>*</span></label>
											<textarea name="describe" placeholder="" value="" ><%= data.describe %></textarea>
										</div>
									</div>
									<div class="col-lg-6 col-md-12 col-12">
										<div class="form-group message">
											<label>Content<span>*</span></label>
											<textarea name="content" placeholder="" value=""><%= data.content %></textarea>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<label>Size<span>*</span></label>
										<div class="row mb-2">
											<div class="col-9">
												<div id="output"></div>
											</div>
											<div class="col-3 ">
												<div class="dropdown">
													<button type="button" onclick="toggleDropdown()" id="dropdown-btn">Select Options</button>
													<div id="dropdown-content" class="dropdown-content">
														<% for(var i=0; i< size.length; i++){%>
															<% var check=0; %>
															<% for(var j=0; j< data.size.length;j++){%>
																<% if(size[i].id == data.size[j].size.id){%>
																    <% check=1; %>
																<%}%>
															<%}%>
															<% if(check==1){%>
																<label><input  type="checkbox" checked name="size" value="<%=size[i].id %>"><%= size[i].size %></label>
															<%}else{%>													
																<label><input type="checkbox" name="size" value="<%=size[i].id %>"><%= size[i].size %></label>
														<%}%>
													<%}%>
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="col-lg-6 col-md-6 col-12">
										<label>Color<span>*</span></label>
										<div class="row mb-2">
											<div class="col-9">
												<div id="outputcolor"></div>
											</div>
											<div class="col-3 ">
												<div class="dropdownform">
													<button type="button" onclick="toggleDropdowncolor()" id="btn1">Select Options</button>
													<div id="dropdown_content" class="content1">
														<% for(var i=0; i< color.length; i++){%>
															<% var check=0; %>
															<% for(var j=0; j< data.color.length;j++){%>
																<% if(color[i].id == data.color[j].color.id){%>
																    <% check=1; %>
																<%}%>
															<%}%>
															<% if(check==1){%>
																<label><input  type="checkbox" checked name="color" value="<%=color[i].id %>"><%= color[i].color %></label>
															<%}else{%>													
																<label><input type="checkbox" name="color" value="<%=color[i].id %>"><%= color[i].color %></label>
														<%}%>
													<%}%>
													</div>
												</div>
											</div>
										</div>
									</div>
									<div class="single-widget get-button col-12">
										<div class="content">
											<div class="button">
												<button class="btn">UPDATE INFORMATION PRODUCT</button>
											</div>
										</div>
									</div>
									
								</div>
							</form>
							<!--/ End Form -->
						</div>
					</div>

				</div>
			</div>
		</section>
    </div>
		<%- include('../common/js.ejs') %>

</body>

</html>