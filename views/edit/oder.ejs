<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../common/admin/header.ejs') %>

    <style>
        body,
        html {
            height: 100%;
            margin: 0;
        }

        .container-fluid {
            height: 100%;
        }

        .row {
            height: 100%;
        }

        .position-fixed {
            height: 100vh;
        }

        .main-content {
            margin-left: 250px;
            /* Điều chỉnh theo chiều rộng của sidebar */
            padding: 20px;
        }
    </style>
</head>

<body>
    <%- include('../common/admin/siderbaadmin.ejs') %>
    <div class="main-content ml-2 col-10">
            <div class="row text-center">
                <h1>PROFILE SHOP </h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-5 border border-dark rounded p-3 ">
                    <div class="row mb-5">
                        <h6 class="col-3">Client Name:</h6>
                        <h6 class="col-9">
                            <%= data.data[0].oder.address.name %>
                        </h6>
                        <h6 class="col-2">Address: </h6>
                        <h6 class="col-10">
                            <%= data.data[0].oder.address.address %>
                        </h6>
                        <h6 class="col-2">Phone number: </h6>
                        <h6 class="col-10">
                           <%= data.data[0].oder.address.phone %>
                        </h6>
                        <h6 class="col-2">E-mail: </h6>
                        <h6 class="col-10">
                            <%= data.data[0].oder.user.email %>
                        </h6>
                        <div class="form-group">
                            <label for="email">
                                <h6>Product: </h6>
                                <% for(var i=0; i< data.data.length;i++){%>
                                  <p><%= data.data[i].product.name%>,SL:<%= data.data[i].quantity%></p>
                                  <%}%>
                            </label>
                        </div>
                        <h6 class="col-2">Total: </h6>
                        <h6 class="col-10">
                          <% var sum=0 %>
                          <% for(var i=0; i< data.data.length; i++){%>
                            <% sum =sum + parseInt(data.data[i].quantity)*parseInt(data.data[i].product.price) %>
                            <%}%>
                            $<%= sum%>.00</h6>
                        <button type="submit" class="btn btn-dark btn-ms mt-2"><a href="/admin/oder"
                                class="nav-link text-white">Return</a></button>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>