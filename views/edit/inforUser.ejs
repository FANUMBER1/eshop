<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../common/admin/header.ejs') %>

  <style>
    body,
    html {
      height: 100%;
      margin: 0;
    }

    .container-fluid {
      height: 100%;
    }

    .row {
      height: 100%;
    }

    .position-fixed {
      height: 100vh;
    }

    .main-content {
      margin-left: 250px;
      /* Điều chỉnh theo chiều rộng của sidebar */
      padding: 20px;
    }
  </style>
</head>

<body>
  <%- include('../common/admin/siderbaadmin.ejs') %>

    <!--main-content-->
    </div>
    <div class="main-content ml-2 col-10">
      <div class="row text-center">
        <h1>EDIT USER ROLE </h1>
      </div>
      <form action="/admin/inforuser/edit/<%= data.id %>" method="post" enctype="multipart/form-data">
        <div class="row justify-content-center">
          <div class="col-5 border border-dark rounded p-3 ">
            <div class="row mb-5 overflow-hidden ">
              <div class="form-group">
                <label for="exampleInputEmail1">Tên Đăng Nhập</label>
                <input type="text" class="form-control" id="exampleInputEmail1" value="<%=data.name %>" name="name">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" class="form-control" id="exampleInputEmail1" value="<%=data.email %>"
                  name="email">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Mật Khẩu</label>
                <input type="password" class="form-control" id="exampleInputPassword1" value="<%=data.pass %>"
                  name="pass">
                <div class="form-group">
                  <lable>Logo</lable>
                  <div class="col-sm-offset-1 col-sm-5">
                    <div class="single-about-img">
                      <img src="<%=data.img %>" class="card-img-top img-fluid" alt="profile_image">
                    </div>
                  </div>
                  <input type="file" name="img">
                </div>
                <div class="form-group">
                  <label for="email">Positon</label>
                  <select class="form-select" aria-label="Default select example" value="<%=data.position %>"
                    name="position">
                    <% for (var i=0 ; i < datarole.length; i++) {%>
                      <% if(data.role.position==datarole[i].position){%>
                        <option selected value="<%=datarole[i].id %>">
                          <%= datarole[i].position %>
                        </option>
                        <% } else{ %>
                          <option value="<%=datarole[i].id %>">
                            <%= datarole[i].position%>
                          </option>
                          <% }%>
                            <% }%>
                  </select>
                </div>
                <button type="submit" class="btn btn-default btn-dark mt-2 mb-2 ">UPDATE</button>
                <button type="button" class="btn btn-dark btn-default "><a href="/admin/user"
                    class="nav-link text-white">RETURN</a></button>
              </div>
            </div>
          </div>
      </form>
    </div>



</body>

</html>