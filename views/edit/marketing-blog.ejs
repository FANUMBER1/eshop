<body>
  <%- include('../common/siderbaadmin.ejs') %>

     <!--main-content-->
 </div>
  <div class="main-content ml-2 col-10" >
    <div class="row text-center">
      <h1>marketing blog </h1> 
    </div>
    <form action="/admin/marketing-blog/edit/<%= data.id %>" method="post" enctype="multipart/form-data" >
     <div class="row justify-content-center">
         <div class="col-8 border border-dark rounded p-3 ">
            <div class="row mb-5 overflow-hidden ">
              <div class="form-group">
                 <label>Name</label>
                 <input type="text" class="form-control" id="email"  name="name" value="<%= data.name %>">
              </div>
             <div class="form-group">
              <label>link</label>
              <input type="text" class="form-control" id="email"  name="link" value="<%= data.link %>">
             </div>
             <div class="form-group">
              <lable>Logo</lable>
              <div class="col-sm-offset-1 col-sm-5">
                <div class="single-about-img">
                  <img src="<%=data.img %>" class="card-img-top img-fluid" alt="profile_image">
                </div>
              </div>
              <input type="file" name="img">
            </div> 
              <div class="form-group">
                <label for="email">Active</label>
                <select class="form-select" aria-label="Default select example" 
                  name="active">
                  <% for (var j=0 ; j < active.length; j++) {%>
                    <% if(active[j].id == data.active.id){%>
                    <option selected value="<%=active[j].id %>">
                      <%= active[j].name %>
                    </option>
                    <%}else{%>
                      <option  value="<%=active[j].id %>">
                        <%= active[j].name %>
                      </option>
                      <%}%>
                    <%}%>
                </select>
              </div>    
              
               <button type="submit" class="btn btn-default btn-dark mt-2 mb-2 " >UPDATE</button>
               <button type="button" class="btn btn-dark btn-default " ><a href="/admin/marketing-sale" class="nav-link text-white" >RETURN</a></button> 
            </div>
        </div> 
    </div>
</form>
  </div>
      


