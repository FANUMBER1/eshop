<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../common/admin/header.ejs') %>

    <style>
        body,
        html {
            height: 100%;
            margin: 0;
        }

        .container-fluid {
            height: 100%;
        }

        .row {
            height: 100%;
        }

        .position-fixed {
            height: 100vh;
        }

        .main-content {
            margin-left: 250px;
            /* Điều chỉnh theo chiều rộng của sidebar */
            padding: 20px;
        }
    </style>
</head>

<body>
    <%- include('../common/admin/siderbaadmin.ejs') %>
        <div class="main-content ml-2 col-10 px-5 ">
            <div class="row text-center mb-3">
                <h1>SERVICE </h1>
            </div>
            <div class="row mb-2">
                <div class="col-1">
                    <a href="/admin/service/create" class="btn btn-primary"> Create</a>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-lg-4 g-2 g-lg-3  ">
                <% for(var i=0; i < data.length; i++){%>
                    <div class="col d-flex justify-content-center">
                        <div class="card" style="width: 18rem;">
                            <img src="<%= data[i].img %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= data[i].name %>
                                </h5>
                                <p class="card-text">
                                    <%= data[i].content %>
                                </p>
                                <a href="/admin/service/edit/<%=data[i].id %>" class="btn btn-primary">Update</a>
                                <a href="/admin/service/delete/<%=data[i].id %>" class="btn btn-primary">Delete</a>
                            </div>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
</body>

</html>