<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../common/admin/header.ejs') %>

    <style>
      body, html {
          height: 100%;
          margin: 0;
      }
      .container-fluid {
          height: 100%;
      }
      .row {
          height: 100%;
      }
      .position-fixed {
          height: 100vh;
      }
      .main-content {
          margin-left: 250px; /* Điều chỉnh theo chiều rộng của sidebar */
          padding: 20px;
      }
  </style>
</head>
<body>
  <%- include('../common/admin/siderbaadmin.ejs') %>

  <div class="main-content ml-2 col-10" >
    <div class="row text-center">
      <h1> ACTIVE </h1> 
    </div>
    <div class="row justify-content-center">
      <div class="col-10 border border-dark rounded p-3">
        <div class="row">
          <aside>
            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
              <table class="table">
                <thead class="thead-dark" style="position: sticky; top: 0; background-color: white; z-index: 1;">
                  <tr>
                    <th>STT</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < data.length; i++) { %>
                  <tr>
                    <td><%= i %></td>
                    <td><%= data[i].id %></td>
                    <td><%= data[i].name %></td>
                    <td class="d-flex">
                      <a class="nav-link text-dark" href="/admin/active/edit/<%= data[i].id %>">Chi tiết</a> /
                      <a class="nav-link text-dark" href="/admin/active/delete/<%= data[i].id %>">Xóa</a>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </aside>
        </div>
      </div>
    </div>
    
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-5">
      <h2>Create Classfy</h2>
    <form action="/admin/active/create" method="post" >
      <div class="form-group">
        <label for="email">NAME</label>
        <input type="text" class="form-control" id="email" name="name">
      </div>
      <button type="submit" class="mt-2 btn btn-default btn-dark">CREATE</button>
    </form>
      </div>
    </div>
    </div>
  </body>
</html>