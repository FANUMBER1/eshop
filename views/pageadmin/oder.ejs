<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../common/admin/header.ejs') %>

  <style>
    body,
    html {
      height: 100%;
      margin: 0;
    }

    .container-fluid {
      height: 100%;
    }

    .row {
      height: 100%;
    }

    .position-fixed {
      height: 100vh;
    }

    .main-content {
      margin-left: 250px;
      /* Điều chỉnh theo chiều rộng của sidebar */
      padding: 20px;
    }
  </style>
</head>

<body>
  <%- include('../common/admin/siderbaadmin.ejs') %>

    <div class="main-content ml-2 col-10">
      <div class="row text-center">
        <h1> ODER </h1>
      </div>
      <div class="row justify-content-center">
        <div class="col-10 border border-dark rounded p-3 ">
          <div class="row">
            <aside>
              <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                <table class="table">
                  <thead class="thead-dark" style="position: sticky; top: 0; background-color: white; z-index: 1;">
                  <tr>
                  <th>STT</th>
                  <th>Name Account</th>
                  <th>Product quantity</th>
                  <th>Total value</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( var i=0; i< data.oderids.length ; i++){%>
                  <tr>
                    <td>
                      <%= i %>
                    </td>
                    <td>
                      <%= data.user[i].name %>
                    </td>
                    <td>
                      <% var sl=0 %>
                      <%for(var j=0; j< data.data1.length; j++){%>
                             <% if(data.data1[j].oderid == data.oderids[i].id){%>
                             <% sl=sl+1 %>
                              <%}%>
                        <%}%>
                        <%= sl%>
                    </td>
                    <td>
                      <% var sum=0 %>
                      <% for(var j=0; j< data.data1.length; j++){%>
                        <% if(data.data1[j].oderid == data.oderids[i].id){%>
                        <% sum =sum + parseInt(data.data1[j].quantity)*parseInt(data.data1[j].product.price) %>
                        <%}%>
                        <%}%>
                        <%= sum%>
                    </td>
                    <td class="d-flex"><a class="nav-link text-dark" href="/admin/oder/edit/<%=data.oderids[i].id %>"> Chi
                        tiết /<a class="nav-link text-dark" href="/admin/oder/delete/<%=data.oderids[i].id %> ">
                          Xóa</a></a></td>
                  </tr>
                  <%}%>
              </tbody>
            </table>
          </div>
        </aside>
          </div>
        </div>
      </div>
    </div>
</body>

</html>