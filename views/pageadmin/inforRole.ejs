<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../common/admin/header.ejs') %>

    <style>
      body, html {
          height: 100%;
          margin: 0;
      }
      .container-fluid {
          height: 100%;
      }
      .row {
          height: 100%;
      }
      .position-fixed {
          height: 100vh;
      }
      .main-content {
          margin-left: 250px; /* Điều chỉnh theo chiều rộng của sidebar */
          padding: 20px;
      }
  </style>
</head>
<body>
  <%- include('../common/admin/siderbaadmin.ejs') %>

  <div class="main-content ml-2 col-10" >
    <div class="row text-center">
      <h1> INFORMATION USER ROLE </h1> 
    </div>
    <div class="row justify-content-center">
        <div class="col-10 border border-dark rounded p-3 ">
           <div class="row">
            <table class="table">
              <thead>
                <tr>
                  <th>STT</th>
                  <th>ID</th>
                  <th>Position</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i < data.length ; i++){%>   
                <tr>
                  <td><%= i %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].position %></td>
                <td class="d-flex"><a class="nav-link text-dark" href="/admin/role/edit/<%= data[i].id %>"> Chi tiết /<a class="nav-link text-dark" href="/admin/role/delete/<%= data[i].id %>"> Xóa</a></a></td>
                </tr>
                <%}%>
              </tbody>
            </table>            
          </div> 
       </div> 
    </div>
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-5">
      <h2>Create User Role</h2>
    <form action="/admin/role/create" method="post" >
      <div class="form-group">
        <label for="email">Positon</label>
        <input type="text" class="form-control" id="email" name="position">
      </div>
      <button type="submit" class="mt-2 btn btn-default btn-dark">CREATE</button>
    </form>
      </div>
    </div>
    </div>
  </body>
</html>