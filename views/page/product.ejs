                                <div class="product-img">
                                    <a href="/product/<%= products[i].id %>">
                                        <img class="default-img" src="<%= products[i].img[0] %>" alt="#">
                                        <img class="hover-img" src="<%= products[i].img[0] %>" alt="#">
