		<%-include('../common/siderbar.ejs')%>
		<!--/ End Header -->
		
		<!-- Breadcrumbs -->
		<div class="breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col-12">
						<div class="bread-inner">
							<ul class="bread-list">
								<li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
								<li class="active"><a href="">Blog Single Sidebar</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- End Breadcrumbs -->
			
		<!-- Start Blog Single -->
		<section class="blog-single section">
			<div class="container">
				<div class="row">
					<div class="col-lg-8 col-12">
						<div class="blog-single-main">
							<div class="row">
								<div class="col-12">
									<div class="image">
										<img src="<%=data.img %>" alt="#">
									</div>
									<div class="blog-detail">
										<h2 class="blog-title"><%=data.name %></h2>
										<div class="blog-meta">
											<span class="author"><a href="#"><i class="fa fa-user"></i>by <%=data.user.name %></a><a href="#"><i class="fa fa-calendar"></i><%= data.time %></a><a href="#"><i class="fa fa-comments"></i>Comment (<%= data.comment.length %>)</a></span>
										</div>
										<div class="content">
											<%=data.content %>										
										</div>
									</div>
									<div class="share-social">
										<div class="row">
											<div class="col-12">
												<div class="content-tags">
													<h4>Tags:</h4>
													<ul class="tag-inner">
														<% for(var i=0; i< data.tag.length;i++){%>
														<li><a href="/search/tag/<%= data.tag[i].tag.id %>"><%= data.tag[i].tag.name %></a></li>
														<%}%>
														
													</ul>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="col-12">
									<div class="comments">
										<h3 class="comment-title">Comments (<%= data.comment.length %>)</h3>
										<!-- Single Comment -->
										 <% for(var i=0; i< data.comment.length; i++){%>
										<div class="single-comment">
											<img src="<%= data.comment[i].user.img %>" alt="#">
											<div class="content">
												<h4><%= data.comment[i].user.name %> <span><%= data.comment[i].time %></span></h4>
												<p><%= data.comment[i].content %></p>
												
											</div>
										</div>
										<%}%>
										
										<!-- End Single Comment -->
									</div>									
								</div>											
								<div class="col-12">			
									<div class="reply">
										<div class="reply-head">
											<h2 class="reply-title">Leave a Comment</h2>
											<!-- Comment Form -->
											<form class="form" action="/blog/comment/<%=data.id %>" method="post">
												<div class="row">
													<div class="col-12">
														<div class="form-group">
															<label>Your Message<span>*</span></label>
															<textarea name="message" placeholder=""></textarea>
														</div>
													</div>
													<div class="col-12">
														<div class="form-group button">
															<button type="submit" class="btn">Post comment</button>
														</div>
													</div>
												</div>
											</form>
											<!-- End Comment Form -->
										</div>
									</div>			
								</div>			
							</div>
						</div>
					</div>
					<div class="col-lg-4 col-12">
						<div class="main-sidebar">
							<!-- Single Widget -->
							<div class="single-widget search">
								<form action="/search/blog" autocomplete="off" data-submitfalse="q" method="GET">
								<div class="form">
									<input id="search-input" class="form-control" name="timkiem" type="text" placeholder="Search Here...">
									<button class="button" type="submit"><i class="ti-search"></i></button>
								</div>
							</form>
							</div>
							<!--/ End Single Widget -->
							<!-- Single Widget -->
							<div class="single-widget category">
								<h3 class="title">Blog Categories</h3>
								<ul class="categor-list">
									<% for(var i=0; i< data.categori.length;i++){%>
										<li><a href="/search/<%= data.categori[i].categori.id %>"><%= data.categori[i].categori.name %></a></li>
										<%}%>
								</ul>
							</div>
							<!--/ End Single Widget -->
							<!-- Single Widget -->
							<div class="single-widget recent-post">
								<h3 class="title">Recent post</h3>
								<!-- Single Post -->
								 <% for(var i=0; i < 3; i++){%>
								<div class="single-post">
									<div class="image">
										<img src="<%= datas[i].img %>" alt="#">
									</div>
									<div class="content">
										<h5><a href="#">T<%= datas[i].name %></a></h5>
										<ul class="comment">
											<li><i class="fa fa-calendar" aria-hidden="true"></i><%= datas[i].time %></li>
											<li><i class="fa fa-commenting-o" aria-hidden="true"></i><%= datas[i].comment.length %></li>
										</ul>
									</div>
								</div>
								<%}%>
								
							</div>
							<!--/ End Single Widget -->
							<!-- Single Widget -->
							<!--/ End Single Widget -->
							<!-- Single Widget -->
							<div class="single-widget side-tags">
								<h3 class="title">Tags</h3>
								<ul class="tag">
									<% for(var i=0; i< tag.length;i++){%>
										<% var check=0 %>
										<% for(var j=0; j< data.tag.length;j++){%>
                                       <% if(tag[i].id == data.tag[j].tag.id){%>
										<% check=1 %>
										<%}%>
									    <%}%>
										<% if(check==0){%>
											<li><a href="/search/tag/<%= tag[i].id %>"><%= tag[i].name %></a></li>
									<%}%>
									<%}%>

								</ul>
							</div>
							<!--/ End Single Widget -->
							<!-- Single Widget -->
							<div class="single-widget newsletter">
								<h3 class="title">Newslatter</h3>
								<div class="letter-inner">
									<h4>Subscribe & get news <br> latest updates.</h4>
									<div class="form-inner">
										<input type="email" placeholder="Enter your email">
										<a href="#">Submit</a>
									</div>
								</div>
							</div>
							<!--/ End Single Widget -->
						</div>
					</div>
				</div>
			</div>
		</section>
		<!--/ End Blog Single -->
			
