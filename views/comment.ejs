<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min1.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="/assets/js/bootstrap.min1.js" type="text/javascript"></script>
  <link href="/assets/css/css.css" rel="stylesheets">
  <title>Document</title>
  <style>
    body,
    html {
      height: 100%;
      margin: 0;
    }

    .container-fluid {
      height: 100%;
    }

    .row {
      height: 100%;
    }

    .position-fixed {
      height: 100vh;
    }

    .main-content {
      margin-left: 250px;
      /* Điều chỉnh theo chiều rộng của sidebar */
      padding: 20px;
    }
  </style>
</head>

<body>
  <%- include('./common/siderbaadmin.ejs') %>

    <div class="main-content ml-2 col-10">
      <div class="row text-center">
        <h1> COMMENT </h1>
      </div>
      <div class="row justify-content-center">
        <div class="col-10 border border-dark rounded p-3 ">
          <div class="row">
          <aside>
            <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
              <table class="table">
                <thead class="thead-dark" style="position: sticky; top: 0; background-color: white; z-index: 1;">
                <tr>
                  <th>STT</th>
                  <th>Author</th>
                  <th>Name Blog</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i< data.length ;i++){%>
                  <tr>
                    <td>
                      <%= i %>
                    </td>
                    <td>
                      <%= data[i].user.name %>
                    </td>
                    <td><a class="nav-link text-primary" href="/blog/<%=data[i].blog.id%>">
                        <%= data[i].blog.name%>
                      </a></td>
                    <td class="d-flex"><a class="nav-link text-dark" href="/admin/comment/edit/<%=data[i].id%>"> Edit /<a
                          class="nav-link text-dark" href="/admin/comment/delete/<%=data[i].id%>"> Xóa</a></a></td>
                  </tr>
                  <%}%>
              </tbody>
            </table>
          </div>
        </aside>
        </div>
      </div>
    </div>
    </div>
</body>

</html>